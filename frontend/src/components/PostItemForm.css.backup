.modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    overflow-y: auto;
    z-index: 9999;
    padding: 40px 0;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.modal-content {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 1.5rem;
    width: 90%;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.3s ease;
}


/* Modal scrollbar - visible and styled */
.modal-content::-webkit-scrollbar {
    width: 8px;
}

.modal-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
}

.modal-content::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
    border-radius: 10px;
}

.modal-content::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #7c3aed, #db2777);
}

@keyframes slideUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.modal-header h2 {
    font-size: 1.2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.close-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 2rem;
    cursor: pointer;
    transition: color 0.3s ease;
    line-height: 1;
}

.close-btn:hover {
    color: var(--text-primary);
}

.post-form {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.form-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
}

.form-actions button {
    flex: 1;
}

/* Form Input Styles - STRONG VISIBLE COLORS */
.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.form-group label {
    font-weight: 600 !important;
    color: #1a1a2e !important;
    font-size: 0.85rem !important;
    margin-bottom: 0;
}

.form-group input,
.form-group textarea,
.form-group select {
    padding: 0.5rem 0.75rem !important;
    border: 1.5px solid #cbd5e0 !important;
    border-radius: 6px !important;
    background: #ffffff !important;
    color: #1a1a2e !important;
    font-size: 0.9rem !important;
    font-family: inherit !important;
    transition: all 0.3s ease !important;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: #94a3b8 !important;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
    outline: none !important;
    border-color: #8b5cf6 !important;
    background: #ffffff !important;
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2) !important;
}

.form-group textarea {
    min-height: 60px;
    resize: vertical;
}

.form-group select {
    cursor: pointer;
}

.error-message {
    padding: 0.75rem 1rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    color: #ef4444;
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

/* Dark Theme - Beautiful & Visible */
:root[data-theme="dark"] .modal-content {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.98)) !important;
    border: 1px solid rgba(139, 92, 246, 0.3) !important;
}

:root[data-theme="dark"] .form-group label {
    color: #e0e7ff !important;
    font-weight: 700 !important;
    letter-spacing: 0.3px;
}

:root[data-theme="dark"] .form-group input,
:root[data-theme="dark"] .form-group textarea,
:root[data-theme="dark"] .form-group select {
    background: rgba(30, 41, 59, 0.9) !important;
    border: 2px solid rgba(100, 116, 139, 0.5) !important;
    color: #f8fafc !important;
    font-weight: 500;
}

:root[data-theme="dark"] .form-group input::placeholder,
:root[data-theme="dark"] .form-group textarea::placeholder {
    color: #94a3b8 !important;
    opacity: 0.8;
}

:root[data-theme="dark"] .form-group input:focus,
:root[data-theme="dark"] .form-group textarea:focus,
:root[data-theme="dark"] .form-group select:focus {
    background: rgba(15, 23, 42, 0.95) !important;
    border-color: #a78bfa !important;
    box-shadow: 0 0 0 4px rgba(167, 139, 250, 0.25) !important;
    color: #ffffff !important;
}

.image-upload-section {
    margin-top: 0.5rem;
}

.upload-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    border: 2px dashed rgba(139, 92, 246, 0.5);
    border-radius: 12px;
    background: rgba(139, 92, 246, 0.05);
    cursor: pointer;
    transition: all 0.3s ease;
}

.upload-area:hover {
    border-color: rgba(139, 92, 246, 0.8);
    background: rgba(139, 92, 246, 0.1);
}

.upload-icon {
    font-size: 3rem;
    margin-bottom: 0.5rem;
}

.upload-area p {
    margin: 0.5rem 0;
    color: var(--text-primary);
    font-weight: 500;
}

.upload-hint {
    font-size: 0.875rem;
    color: var(--text-muted);
}

.image-previews {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
}

.image-preview {
    position: relative;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgba(139, 92, 246, 0.3);
}

.image-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.remove-image {
    position: absolute;
    top: 4px;
    right: 4px;
    background: rgba(239, 68, 68, 0.9);
    color: white;
    border: none;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1.25rem;
    line-height: 1;
    transition: all 0.2s ease;
}

.remove-image:hover {
    background: rgb(220, 38, 38);
    transform: scale(1.1);
}

@media (max-width: 640px) {
    .modal-content {
        padding: 1.5rem;
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .modal-header h2 {
        font-size: 1.5rem;
    }
}